		 YANG module for nDPI.
		 Adds engine nodes to QoS, PBR, Firewall and App-Firewall.";

	revision 2020-05-12 {
		description "Initial revision";
	}

	grouping ndpi-application-name {
		leaf name {
			description  "Specify an nDPI application name";
			configd:help "Specify an nDPI application name";
			type ndpi-app-names:application-names;
		}
	}

	grouping ndpi-application-type {
		leaf type {
			description  "Specify an nDPI application type";
			configd:help "Specify an nDPI application type";
			type ndpi-app-types:application-types;
		}
	}

	augment "/policy:policy/policy-route:route/pbr:pbr/pbr:rule/" +
		"pbr-dpi:application/pbr-dpi:engine" {
		description "Add nDPI functionality to PBR rule";
		container ndpi {
			description  "Use the nDPI application engine";
			configd:help "Use the nDPI application engine";
			presence "nDPI application rule configuration";
			must "count(name|type) = 1" {
				error-message "Specify exactly one of 'name' or 'type'";
			}
			uses ndpi-application-name;
			uses ndpi-application-type;
		}
	}

	augment "/policy:policy/policy-qos:qos/policy-qos:name/" +
		"policy-qos:shaper/policy-qos:class/policy-qos:match/" +
		"policy-qos-dpi:application/policy-qos-dpi:engine" {
		description "Add nDPI functionality to QoS rule";
		container ndpi {
			description  "Use the nDPI application engine";
			configd:help "Use the nDPI application engine";
			presence "nDPI application rule configuration";
			must "count(name|type) = 1" {
				error-message "Specify exactly one of 'name' or 'type'";
			}
			uses ndpi-application-name;
			uses ndpi-application-type;
		}
	}

	augment "/security:security/security-firewall:firewall/" +
		"security-firewall:name/security-firewall:rule/" +
		"security-firewall:session/security-firewall-dpi:application/" +
		"security-firewall-dpi:engine" {
		description "Add nDPI functionality to firewall rule";
		container ndpi {
			description  "Use the nDPI application engine";
			configd:help "Use the nDPI application engine";
			presence "nDPI application rule configuration";
			must "count(name|type) = 1" {
				error-message "Specify exactly one of 'name' or 'type'";
			}
			uses ndpi-application-name;
			uses ndpi-application-type;
		}
	}

	augment "/security:security/security-app:application/" +
		"security-app:firewall/security-app:name/security-app:rule/" +
		"security-app:engine" {
		description "Add nDPI functionality to security application";
		container ndpi {
			description  "Use the nDPI application engine";
			configd:help "Use the nDPI application engine";
			presence "nDPI application rule configuration";
			must "count(name|type) = 1" {
				error-message "Specify exactly one of 'name' or 'type'";
			}
			uses ndpi-application-name;
			uses ndpi-application-type;
		}
	}
}
