module vyatta-dpi-user-v1 {
	namespace "urn:vyatta.com:mgmt:vyatta-dpi-user:1";
	prefix vyatta-dpi-user-v1;

	import configd-v1 {
		prefix configd;
	}
	import vyatta-policy-v1 {
		prefix policy;
	}
	import vyatta-policy-route-v1 {
		prefix policy-route;
	}
	import vyatta-policy-pbr-dpi-v1 {
		prefix pbr-dpi;
	}
	import vyatta-policy-pbr-v1 {
		prefix pbr;
	}
	import vyatta-policy-qos-v1 {
		prefix policy-qos;
	}
	import vyatta-policy-qos-dpi-v1 {
		prefix policy-qos-dpi;
	}
	import vyatta-security-v1 {
		prefix security;
	}
	import vyatta-security-firewall-v1 {
		prefix security-firewall;
	}
	import vyatta-security-firewall-dpi-v1 {
		prefix security-firewall-dpi;
	}
	import vyatta-security-application-v1 {
		prefix security-app;
	}
	import vyatta-services-v1 {
		prefix service;
	}
	import vyatta-service-application-v1 {
		prefix service-app;
	}

	organization "AT&T Inc.";
	contact
		"AT&T
		 Postal: 208 S. Akard Street
