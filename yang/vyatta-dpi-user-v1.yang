	revision 2020-05-12 {
		description "Initial revision.";
	}

	grouping user-application-name {
		leaf name {
			description  "Specify a user-defined application name";
			configd:help "Specify a user-defined application name";
				type leafref {
					configd:help "User-defined application name";
					path "/service:service/" +
						"service-app:application/" +
						"service-app:rule/" +
						"service-app:then/" +
						"service-app:name";
				}
		}
	}

	grouping user-application-type {
		leaf type {
			description  "Specify a user-defined application type";
			configd:help "Specify a user-defined application type";
				type leafref {
					configd:help "User-defined application type";
					path "/service:service/" +
						"service-app:application/" +
						"service-app:rule/" +
						"service-app:then/" +
						"service-app:type/" +
						"service-app:type-value";
				}
		}
	}

	augment "/policy:policy/policy-route:route/pbr:pbr/pbr:rule/" +
		"pbr-dpi:application/pbr-dpi:engine" {
		description "Add user-defined DPI functionality to PBR rule";
		container user {
			description  "Use the user-defined DPI " +
				"application engine";
			configd:help "Use the user-defined DPI " +
				"application engine";
			presence "User application rule configuration";
			must "count(name|type) = 1" {
				error-message "Specify exactly one of 'name' or 'type'";
			}
			uses user-application-name;
			uses user-application-type;
		}
	}

	augment "/policy:policy/policy-qos:qos/policy-qos:name/" +
		"policy-qos:shaper/policy-qos:class/policy-qos:match/" +
		"policy-qos-dpi:application/policy-qos-dpi:engine" {
		description "Add user-defined DPI functionality to QoS rule";
		container user {
			description  "Use the user-defined DPI " +
				"application engine";
			configd:help "Use the user-defined DPI " +
				"application engine";
			presence "User application rule configuration";
			must "count(name|type) = 1" {
				error-message "Specify exactly one of 'name' or 'type'";
			}
			uses user-application-name;
			uses user-application-type;
		}
	}

	augment "/security:security/security-firewall:firewall/" +
		"security-firewall:name/security-firewall:rule/" +
		"security-firewall:session/security-firewall-dpi:application/" +
		"security-firewall-dpi:engine" {
		description "Add user-defined DPI functionality to " +
			"firewall rule";
		container user {
			description  "Use the user-defined DPI " +
				"application engine";
			configd:help "Use the user-defined DPI " +
				"application engine";
			presence "User application rule configuration";
			must "count(name|type) = 1" {
				error-message "Specify exactly one of 'name' or 'type'";
			}
			uses user-application-name;
			uses user-application-type;
		}
	}

	augment "/security:security/security-app:application/" +
		"security-app:firewall/security-app:name/security-app:rule/" +
		"security-app:engine" {
		description "Add user-defined DPI functionality " +
			"to security application";
		container user {
			description  "Use the user-defined DPI " +
				"application engine";
			configd:help "Use the user-defined DPI " +
				"application engine";
			presence "User application rule configuration";
			must "count(name|type) = 1" {
				error-message "Specify exactly one of 'name' or 'type'";
			}
			uses user-application-name;
			uses user-application-type;
		}
	}
}
